@inherits LayoutComponentBase
@inject IProjectService ProjectService
@inject IAuthenticationService AuthenticationService

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(e => DrawerToggle())"/>
        <MudSpacer/>
        @*<MudLink Href="#" Typo="Typo.body2" Target="_blank">Sign Up</MudLink>
        <MudLink Href="#" Typo="Typo.body2" Target="_blank">Sign In</MudLink>*@
        <MudIconButton Icon="@Icons.Material.Filled.Login" Color="Color.Inherit" OnClick="@(LogIn)"/>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Docked" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6" Class="px-4">ProMag</MudText>
        </MudDrawerHeader>
        <NavMenu Projects="Projects"/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pt-16 px-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    // Drawer
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    // Get project list
    private List<ProjectSimplifiedModel> Projects { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        var projects = await ProjectService.GetAllSimplifiedAsync();

        Projects = (List<ProjectSimplifiedModel>) projects;
    }


    private async Task LogIn()
    {
        var signInModel = new SignInRequestModel
        {
            UserName = "minhtran244",
            Password = "minhtran244",
            RememberMe = true
        };
        try
        {
            var response = await AuthenticationService.SignIn(signInModel);

            Console.WriteLine(response.Username);
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
        }
    }
}