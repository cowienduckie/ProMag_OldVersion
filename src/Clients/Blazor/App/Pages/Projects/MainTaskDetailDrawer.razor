<MudDrawer @bind-Open="_drawerOpen" Fixed="false" Anchor="Anchor.End" Elevation=" 1">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6" Class="px-4">@MainTask.Name?.ToUpper()</MudText>
    </MudDrawerHeader>
    <MudText Typo="Typo.body1" Class="my-2">@MainTask.Id - @MainTask.Name</MudText>
</MudDrawer>

@code 
{
    [Parameter]
    public KanbanBoard.KanbanTask MainTask { get; set; } = new();

    private bool _drawerOpen = true;

    protected override async Task OnParametersSetAsync()
    {
        if (MainTask.Id != 0) DrawerToggle();
    }

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}